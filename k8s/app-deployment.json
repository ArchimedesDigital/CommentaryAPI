{
  "kind":"Deployment",
  "apiVersion":"extensions/v1beta1",
  "metadata": {
    "name":"ahcip-api-deployment",
    "labels": {
      "name":"ahcip-api-deployment"
    }
  },
  "spec":{
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name":"ahcip-api-pod"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "ahcip-api-app",
            "image": "us.gcr.io/archimedes-01201/ahcip-api:NEW_IMAGE_TAG",
            "env": [
              {
                "name": "NODE_ENV",
                "value": "production" 
              },
              {
                "name": "SESSION_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "secrets",
                    "key": "session"
                  }
                }
              },
              {
                "name": "JWT_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "secrets",
                    "key": "jwt"
                  }
                }
              },
              {
                "name": "DB_HOST",
                "value": "localhost"
              },
              {
                "name": "DB_NAME",
                "value": "ahcip-api"
              },
              {
                "name": "REDIS_HOST",
                "value": "localhost"
              },
              {
                "name": "REDIS_PORT",
                "value": "6379"
              }
            ]
          }, {
            "name": "ahcip-api-redis",
            "image": "redis:4.0"
          }, {
            "name": "ahcip-api-mongo",
            "image": "mongo:3.0",
            "volumeMounts": [
              {
                "name": "mongo-disk",
                "mountPath": "/data/db"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "mongo-disk",
            "gcePersistentDisk": {
              "pdName": "ahcip-api-mongo-disk",
              "fsType": "ext4"
            }
          }
        ]
      }
    }
  }
}
