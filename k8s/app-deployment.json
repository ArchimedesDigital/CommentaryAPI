{
  "kind":"Deployment",
  "apiVersion":"extensions/v1beta1",
  "metadata": {
    "name":"ahcip-api-app-dep",
    "labels": {
      "name":"ahcip-api-app-dep"
    }
  },
  "spec":{
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name":"ahcip-api-app-pod"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "ahcip-api-app-cont",
            "image": "us.gcr.io/archimedes-01201/ahcip-api-app:test",
            "ports": [
              {
                "name": "http-server",
                "containerPort": 3002
              }
            ],
            "env": [
              {
                "name": "NODE_ENV",
                "value": "production"
              },
              {
                "name": "SESSION_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "session-secret",
                  }
                }
              },
              {
                "name": "JWT_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "jwt-secret",
                  }
                }
              },
              {
                "name": "DB_HOST",
                "value": "db.chs.orphe.us"
              },
              {
                "name": "DB_NAME",
                "valueFrom": "ahcip"
              },
              {
                "name": "WS_SERVER_PORT",
                "value": 80
              },
              {
                "name": "WS_SERVER_HOST",
                "value": "ws.chs.orphe.us"
              },
              {
                "name": "WS_SERVER_URI",
                "value": "subscriptions"
              },
              {
                "name": "DEFAULT_LANGUAGE",
                "value": "en"
              },
              {
                "name": "AWS_BUCKET",
                "value": "iiif-orpheus"
              }
            ]
          }
        ]
      }
    }
  }
}
